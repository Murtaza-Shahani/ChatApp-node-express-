<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Chats</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="container">
        <h3>All Chats</h3>

        <form method="GET" action="/chats/new" class="new-chat-form">
            <button class="new-chat-button">NEW CHAT</button>
        </form>
        

        <% for(let chat of chats) { %>
            <div class="chat">
                <p class="from">From: <%= chat.from %></p>
                <div class="msg">
                    <p><%= chat.message %></p>
                    <form action="/chats/<%= chat._id %>/edit" method="GET">
                        <button class="edit-button">Edit</button>
                    </form>
                    <form method="POST" action="/chats/<%=chat._id %>?_method=DELETE">  
                        <button class="delete-button">Delete</button>
                    </form>
                </div>
                <p class="to">Received by: <%= chat.to %></p>
                <hr>
                <p class="date">Time: <%= chat.created_at.toString().split(" ")[4] %></p>
                <p class="date">Date: <%= chat.created_at.toString().split(" ").slice(0, 4).join(" ") %></p>
            </div>
            <br> <br>
        <% } %>
    </div>
</body>
</html>
